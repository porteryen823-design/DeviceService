{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI: Uvicorn",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",          // 替換成你的 FastAPI app 路徑，例如 "app.main:app"      
         "--host", "0.0.0.0",
        "--port", "5200",
        "--workers", "1",
        "--reload",
        "--env-file", ".env"
      ],
      "jinja": true,
      "justMyCode": true,
      "console": "integratedTerminal"
    }
  ]
}